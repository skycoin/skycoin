{
    "name": "skycoin",
    "productName": "Skycoin",
    "author": "skycoin",
    "main": "src/electron-main.js",
    "version": "0.13.0",
    "description": "skycoin wallet",
    "build": {
        "appId": "org.skycoin.skycoin",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.productivity",
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./Resources/app"
            }]
        },
        "win": {
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./resources/app"
            }]
        },
        "linux": {
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./resources/app"
            }]
        }, 
         "files": [
            "!**/*",
            "src/**/*"
        ],
        "extraResources": [{
            "from": "../src/gui/static/dist/",
            "to": "./app/dist/",
             "filter": [
                "**/*",
                "!current-skycoin.json"
            ]
        },
          {
            "from": "./skycoin/",
            "to": "./app/dist/"
        }],
        "directories": {
            "output": "release"
        }
    },
    "scripts": {
        "dist-win": "build -w --x64 --ia32",
        "dist-linux": "build -l --x64",
        "dist-mac": "build -m --x64",
        "pack-mac": "build --dir -m"
    },
    "devDependencies": {
        "electron": "1.4.13"
    }
}