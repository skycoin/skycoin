{
    "name": "skycoin",
    "productName": "Skycoin",
    "version": "0.12.0",
    "build": {
        "appId": "org.skycoin.skycoin",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.productivity",
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./Resources/app"
            }]
        },
        "win": {
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./resources/app"
            }]
        },
        "linux": {
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./resources/app"
            }]
        },
        "extraResources": [{
            "from": "../src/gui/static/dist/",
            "to": "./app/dist/"
        }],
        "directories": {
            "app": "src",
            "output": "release"
        }
    },
    "scripts": {
        "dist-win": "build -w --x64 --ia32",
        "dist-linux": "build -l --x64",
        "dist-mac": "build -m --x64",
        "pack-mac": "build --dir -m"
    },
    "dependencies": {
        "electron-debug": "^1.0.1",
        "electron-log": "^1.2.2"
    },
    "devDependencies": {
        "electron": "1.4.13"
    }
}